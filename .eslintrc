{
	"root": true,
	"parser": "@typescript-eslint/parser",
	"plugins": [
	  "@typescript-eslint"
	],
	"extends": [
	  "eslint:recommended",
	  "plugin:@typescript-eslint/eslint-recommended",
	  "plugin:@typescript-eslint/recommended"
	],
	"rules": {
		"no-console": 2,
		"no-useless-catch": 0,
    "brace-style": ["error", "1tbs", { "allowSingleLine": true }]
	}
  }